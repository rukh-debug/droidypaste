{
  "expo": {
    "name": "DroidyPaste",
    "slug": "droidypaste",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "droidypaste",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "githubUrl": "https://github.com/rukh-debug/droidypaste",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.droidypaste.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow DroidyPaste to access your photos to upload images.",
        "NSCameraUsageDescription": "Allow DroidyPaste to access your camera to take photos for upload.",
        "NSMicrophoneUsageDescription": "Allow DroidyPaste to access your microphone for video recording.",
        "LSApplicationQueriesSchemes": [
          "droidypaste"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.droidypaste.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.VIBRATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.SEND",
          "category": [
            "android.intent.category.DEFAULT"
          ],
          "data": [
            {
              "mimeType": "text/*"
            },
            {
              "mimeType": "image/*"
            },
            {
              "mimeType": "video/*"
            },
            {
              "mimeType": "*/*"
            }
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-file-system",
      "expo-image-picker",
      "expo-document-picker",
      "expo-notifications",
      [
        "expo-share-intent",
        {
          "androidIntentFilters": [
            "text/*",
            "image/*",
            "video/*",
            "audio/*",
            "*/*"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#DADADA",
          "image": "./assets/images/splash.png",
          "dark": {
            "backgroundColor": "#232323",
            "image": "./assets/images/splash.png"
          },
          "imageWidth": 200
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "52cd4b59-1ddb-4c04-8952-4901b11a0546"
      }
    }
  }
}
